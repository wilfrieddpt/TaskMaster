<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.LoginPage">
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Email" Keyboard="Email"/>   
        <Entry Placeholder="Mot de passe" IsPassword="True"/>
        <Button Text="Se connecter" Clicked="OnLoginClicked"/>
        <Button Text="CrÃ©er un compte" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>

    <!-- Titre -->
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Connexion" 
               FontSize="30" 
               HorizontalOptions="Center" 
               TextColor="{DynamicResource TextColor}" />

        <!-- Champs de saisie -->
        <Entry x:Name="EmailEntry" 
               Placeholder="Email" 
               Keyboard="Email" 
               TextColor="{DynamicResource TextColor}" 
               BackgroundColor="{DynamicResource EntryBackgroundColor}" 
               Margin="0,10,0,10" />

        <Entry x:Name="PasswordEntry" 
               Placeholder="Mot de passe" 
               IsPassword="True" 
               TextColor="{DynamicResource TextColor}" 
               BackgroundColor="{DynamicResource EntryBackgroundColor}" 
               Margin="0,10,0,10" />

        <!-- Boutons -->
        <Button Text="Se connecter" 
                BackgroundColor="{DynamicResource ButtonBackgroundColor}" 
                TextColor="White" 
                Clicked="OnLoginClicked" 
                Margin="0,10,0,10"/>

        <Button Text="S'inscrire" 
                BackgroundColor="{DynamicResource ButtonBackgroundColor}" 
                TextColor="White" 
                Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>

